    "terminal.integrated.shell.windows": "C:\\\\Windows\\\\System32\\\\wsl.exe",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "vsicons.projectDetection.disableDetect": true,
    "terminal.external.windowsExec": "C:\\\\\\\\Windows\\\\\\\\System32\\\\\\\\wsl.exe",
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "activityBar.background": "#000000", 
        "sideBar.background": "#000000",
        "editor.selectionBackground": "#135564",
        "editor.selectionHighlightBorder": "#135564"

    },
    "files.autoSave": "off",
    "workbench.sideBar.location": "left",
    "window.zoomLevel": 0, 
    "files.exclude": {
        "**/.git": false
    },
    "ConEmu.showTitlebarIcon": true,
    "ConEmu.reuseInstance": false,
    "ConEmu.path": "c:\\Program Files\\ConEmu\\ConEmu64.exe",
    "problems.autoReveal": false,
    "workbench.editor.highlightModifiedTabs": true,
    "explorer.autoReveal": true,
    "javascript.validate.enable": false, //disable default javascript validator replaced by eslint
    "eslint.packageManager": "yarn",
    "eslint.run": "onType",
    "eslint.alwaysShowStatus": true,
    "eslint.provideLintTask": true,
    "eslint.validate": [
        "javascript"
    ], 
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Operator Mono Lig', 'Fira Code Retina', Consolas, 'Courier New', monospace",
    "editor.tabSize": 2,
    "prettier.eslintIntegration": true,

   

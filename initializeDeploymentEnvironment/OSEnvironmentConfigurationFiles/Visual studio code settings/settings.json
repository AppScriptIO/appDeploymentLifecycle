/*
 - extensions folder cd %USERPROFILE%\.vscode\extensions
 - 
*/
{
    /** Style & Font */
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Operator Mono Lig', 'Fira Code Retina', Consolas, 'Courier New', monospace",
    "editor.tabSize": 2,
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "activityBar.background": "#000000",
        "sideBar.background": "#000000",
        "editor.selectionBackground": "#135564",
        "editor.selectionHighlightBorder": "#135564"
    },
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 120,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Tomorrow Night Bright Operator Mono",
    "material-icon-theme.showUpdateMessage": false,
    "vsicons.dontShowNewVersionMessage": true,
    "window.menuBarVisibility": "default",
    "guides.enabled": false,
    "workbench.sideBar.location": "left",
    "window.zoomLevel": 0,
    "problems.autoReveal": false,
    "workbench.editor.highlightModifiedTabs": true,
    "explorer.autoReveal": true,
    "vsicons.projectDetection.disableDetect": true,

    /* Debugger */
    "files.eol": "\n",
    "launch": {
        "configurations": [
            // {
            //     "name": "Remote nodejs",
            //     "type": "node",
            //     "request": "attach",
            //     "processId": "${command:PickProcess}",
            //     "protocol": "inspector",
            //     "address": "localhost",
            //     "port": 9229,
            //     "restart": true,
            //     "stopOnEntry": false,
            //     "sourceMaps": false,
            //     "localRoot": "${workspaceRoot}/",

            // },
            // {
            //     "name": "Launch localhost",
            //     "type": "chrome",
            //     "request": "launch",
            //     "url": "http://localhost/",
            //     "webRoot": "${workspaceFolder}/"
            // },
            // {
            //     "name": "Launch index.html (disable sourcemaps)",
            //     "type": "chrome",
            //     "request": "launch",
            //     "sourceMaps": false,
            //     "file": "${workspaceFolder}/"
            // },

        ]
    },

    /* Terminal */
    "terminal.integrated.shell.windows": "C:\\\\Windows\\\\System32\\\\wsl.exe",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.external.windowsExec": "C:\\\\\\\\Windows\\\\\\\\System32\\\\\\\\wsl.exe",
    "ConEmu.showTitlebarIcon": true,
    "ConEmu.reuseInstance": false,
    "ConEmu.path": "c:\\Program Files\\ConEmu\\ConEmu64.exe",

    /* Other functionality */
    "files.autoSave": "off",
    "git.enabled": true,
    "files.exclude": {
        "**/.git": false
    },
    "files.associations": {
        "*.config.json": "jsonc",
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "path-intellisense.extensionOnImport": true,
    "cSpell.allowCompoundWords": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.logLevel": "Warning",

    /* Synchronize settings and extensions */
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.forceDownload": false,
    "sync.quietSync": false,
    "sync.askGistName": false,
    "sync.syncExtensions": true,
    "sync.removeExtensions": false // remove extensions that are not part of the downloaded settigns list.

}